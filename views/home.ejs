<html>

<head>
    <title>
        <%=title%>
    </title>
    <!-- <link rel="stylesheet" href="https://kit.fontawesome.com/1d5f9845fa.css" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>

    <h1 id="page-heading">
        <i class="fas fa-address-book"></i>
        My Contact List</h1>
    <div class="container">
    <div >
        <ul>
            <% for(let i of contact_List){%>
                <li class="list">
                    <div>
                    <p><%=i.name%></p>
                    <p> <%=i.phone%></p>
                    </div>
                    <div>
                    <a href="/delete-contact/?phone=<%=i.phone%>">
                        <i class="fas fa-window-close"></i>
                    </a>
                    </div>
                </li>
                
                <%}%>
        </ul>
    </div>
    <form action="/createContact" method="post">
        <input type="text" name="name" placeholder="Name">
        <input type="number" name="phone" placeholder="Phone">
        <input type="submit" value="Add">
    </form>
</div>    
    <script src="https://kit.fontawesome.com/1d5f9845fa.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>